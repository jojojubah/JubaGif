{
  "name": "jubagif",
  "version": "1.0.0",
  "description": "JubaGif - YouTube Downloader + Video to GIF Converter with HQ output",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . JubaGif --platform=win32 --arch=x64 --out=dist --overwrite",
    "build:win": "electron-packager . JubaGif --platform=win32 --arch=x64 --icon=icon.ico --out=dist --overwrite && npm run copy-binaries",
    "copy-binaries": "node copy-binaries.js",
    "setup-binaries": "node setup-binaries.js",
    "build:mac": "electron-packager . JubaGif --platform=darwin --arch=arm64 --icon=icon.icns --out=dist --overwrite && npm run copy-binaries",
    "build:mac-universal": "electron-packager . JubaGif --platform=darwin --arch=x64,arm64 --icon=icon.icns --out=dist --overwrite && npm run copy-binaries",
    "build:all": "npm run build:win && npm run build:mac"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "yt-dlp-wrap": "^2.3.12"
  }
}